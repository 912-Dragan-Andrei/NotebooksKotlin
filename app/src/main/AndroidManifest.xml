<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.NotebookOptionsActivity" />
        <activity android:name=".ui.create_notebook.CreateNotebookActivity" />
        <activity android:name=".ui.read_note.ReadNotesActivity" />
        <activity android:name=".ui.create_note.CreateNoteActivity" />
        <activity android:name=".ui.update_note.UpdateNoteActivity" />
        <activity android:name=".ui.delete_note.DeleteNoteActivity" />
    </application>

</manifest>